/* pages/plan/planList/planList.wxss */
page {
  background-color: whitesmoke;
  height: 100%;
}

.top-area {
  position: fixed;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background-color: whitesmoke;
  border-bottom: 1rpx solid lightcyan;
  width: 100%;
}

.content {
  height: calc(100% - 182rpx);
  overflow-y: scroll;
  margin-top: 60rpx;
}

.content::before {
  height: 60rpx;
}

ul {
  position: relative;
  height: 100%;
  display: block;

}

.blueone {
  border-color: lightblue;
}

li {
  display: block;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid lightpink;
  border-radius: 15rpx;
  padding: 0 30rpx;
  display: flex;
  justify-content: space-between;
}

li:hover {
  height: 140rpx;
  line-height: 140rpx;
}

li>text {
  flex-basis: 80%;
}

.fixed {
  position: fixed;
}

.bottom-container {
  width: 100%;
  height: 120rpx;
  line-height: 140rpx;
  text-align: center;
  bottom: 0;
  /* background-color: whitesmoke; */
}