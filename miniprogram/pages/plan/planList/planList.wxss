/* pages/plan/planList/planList.wxss */
page {
  background-color: whitesmoke;
  height: 100%;
}

.top-area {
  position: fixed;
  height: 40px;
  line-height: 40px;
  text-align: center;
  background-color: whitesmoke;
  border-bottom:1px solid lightcyan ;
  width: 100%;
}

.content {
  margin: 40px 0 60px 0;
}

ul {
  position: relative;
  height: 100%;
  display: block;

}

.blueone {
  border-color: lightblue;
}

li {
  display: block;
  height: 50px;
  line-height: 70px;
  border-bottom: 1px solid lightpink;
  border-radius: 15px;
  padding: 0 15px;
  display: flex;
  justify-content: space-between;
}

li:hover {
  height: 100px;
  line-height: 95px;
}

li>text {
  flex-basis: 80%;
}

.fixed {
  position: fixed;
}

.bottom-container {
  width: 100%;
  height: 60px;
  line-height: 80px;
  text-align: center;
  bottom: 0;
  background-color: whitesmoke;
}