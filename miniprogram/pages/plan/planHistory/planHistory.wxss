.history {
  text-align: center;
  padding: 0 2px;
}

.red {
  background-color: lightcoral;
}

.green {
  background-color: lightgreen;
}

.history .item {
  height: 50px;
  line-height: 50px;
  border-bottom: 1px dashed cadetblue;
  display: flex;
  justify-content: space-between;
  flex-grow: 9 1;
  color: white;
  border-radius: 10rpx;
  border: 1px solid white;
  padding: 0 8rpx;
}

.detail {
  flex-basis: 90%;
  display: flex;
  flex-grow: 1 1;
}