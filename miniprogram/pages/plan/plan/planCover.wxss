/* pages/plan/plan/planCover.wxss */
page {
  height: calc(100% + 2px)
}

.forecast {
  width: 90%;
  margin: 0 auto;
}

.title {
  display: block;
  width: 100%;
  text-align: center;
}

.pic {
  width: 100%;
  height: 80vw;
  margin: 0 auto;
}

.history {
  text-align: center;
  padding: 0 10px;
}

.history .item {
  height: 30px;
  border-bottom: 1px solid cadetblue;
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 200px;
}

.bottom-area {
  position: fixed;
  bottom: 10px;
  width: 100%;
  text-align: center;
}